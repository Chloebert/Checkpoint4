{% extends 'admin/admin_base.html.twig' %}

{% block title %}User index
{% endblock %}

{% block body %}
	<div class="container">
		<h1>User index</h1>
		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Email</th>
					<th>Roles</th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td class="align-middle w-25">{{ user.id }}</td>
						<td class="align-middle w-25">{{ user.email }}</td>
						<td class="align-middle w-25">{{ user.roles ? user.roles|json_encode : '' }}</td>
						<td class="align-middle text-end">
							<a class="btn btn-sm bg-primary text-light p-2 px-3" href="{{ path('app_user_show', {'id': user.id}) }}">Show</a>
						</td>
						<td class="align-middle">
							{{ include('admin/user/_delete_form.html.twig') }}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="5">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
