{% extends 'admin/admin_base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div class="container d-flex flex-column">
		<a class="btn btn-sm btn-outline-secondary w-25 text-center mt-3 mb-3" href="{{ path('app_user_index') }}">back to list</a>
    <h1>{{ user.email }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>
</div>
{% endblock %}
