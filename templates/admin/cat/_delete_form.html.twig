<form method="post" action="{{ path('app_cat_delete', {'id': cat.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ cat.id) }}">
    <button class="btn btn-sm bg-danger text-light p-2">Delete</button>
</form>
