{% extends 'admin/admin_base.html.twig' %}

{% block title %}Cat{% endblock %}

{% block body %}
    <h1>Cat</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cat.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ cat.name }}</td>
            </tr>
            <tr>
                <th>DateOfBirth</th>
                <td>{{ cat.dateOfBirth ? cat.dateOfBirth|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ cat.description }}</td>
            </tr>
            <tr>
                <th>GoodPoint</th>
                <td>{{ cat.goodPoint }}</td>
            </tr>
            <tr>
                <th>BadPoint</th>
                <td>{{ cat.badPoint }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ cat.rating }}</td>
            </tr>
            <tr>
                <th>CatOfTheMonth</th>
                <td>{{ cat.catOfTheMonth ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_cat_index') }}">back to list</a>

    <a href="{{ path('app_cat_edit', {'id': cat.id}) }}">edit</a>

    {{ include('admin/cat/_delete_form.html.twig') }}
{% endblock %}
