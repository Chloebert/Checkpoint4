{% extends 'admin/admin_base.html.twig' %}

{% block title %}Cat Pictures
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="title">Cat Pictures</h1>
		<div class="d-flex justify-content-end">
			<a class="btn btn-sm bg-primary text-light px-5 py-2" href="{{ path('app_cat_picture_new') }}">
				Upload new</a>
		</div>
		<table class="table">
			<thead>
				<tr>
					<th>Picture</th>
					<th>Is the main picture ?</th>
					<th>Cat</th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for cat_picture in cat_pictures %}
					<tr>
						<td class="align-middle w-50"><img src="{{ asset('uploads/images/cats/' ~ cat_picture.picture) }}" class="admin-table-image" alt="{{ cat_picture.cat.name }}"></td>
						<td class="align-middle w-25">{{ cat_picture.mainPicture ? 'Yes' : 'No' }}</td>
						<td class="align-middle w-25">{{ cat_picture.cat.name }}</td>
						<td class="align-middle text-end">
							<a class="btn btn-sm bg-primary text-light p-2 px-3" href="{{ path('app_cat_picture_edit', {'id': cat_picture.id}) }}">Edit</a>
						</td>
						<td class="align-middle">
							{{ include('admin/cat_picture/_delete_form.html.twig') }}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
