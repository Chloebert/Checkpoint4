{% extends 'base.html.twig' %}

{% block title %}Home
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('home') }}
{% endblock %}

{% block body %}
	<main>
		<div class="container-fluid d-flex flex-column align-items-center">
			<div class="d-flex justify-content-center align-items-center">
				<h1 class="main-title text-light mt-5 pt-5 text-center">
					Vote
				</h1>
			</div>
			<div class="w-50 element-bg p-5 mb-5">
			{{ include('rate/_form.html.twig') }}
			</div>
			<div class="row justify-content-center">
				{% for cat in cats %}
					<div class="col-5 m-5">
						<div class="card card-bg p-0">
							{% for picture in cat.catPictures|slice(0, 1) %}
									<img src="{{ asset('uploads/images/cats/' ~ picture.picture) }}" class="card-img-top cotm-img w-100" alt="...">
							{% endfor %}
							<div class="card-body">
								<h5 class="home-title cotm-title text-center text-center text-secondary">{{ cat.name }}</h5>
								<div class="row d-flex flex-row">
									<div class="col-5 d-flex align-items-center flex-column">
										<h5 class="home-title fs-2 text-primary">Good</h5>
										<p class="card-text fs-4">{{ cat.goodPoint }}</p>
									</div>
									<div class="col-2 d-flex align-items-center justify-content-center">
										<p class="card-text fs-1">
											<i class="fa-solid fa-paw"></i>
										</p>
									</div>
									<div class="col-5 d-flex align-items-center flex-column">
										<h5 class="home-title fs-2 text-primary">Bad</h5>
										<p class="card-text text-end fs-4">{{ cat.badPoint }}</p>
									</div>
								</div>
							</div>
						</div>
					</div>
		{% endfor %}
	</div>
</div></main>{% endblock %}
