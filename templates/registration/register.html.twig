{% extends 'base.html.twig' %}

{% block title %}Login
{% endblock %}

{% block body %}
	<main class="login">
		<div class="container-fluid">
			<div class="row d-flex justify-content-center">
				<div class="col-10 col-lg-6 m-5 d-flex align-items-center flex-column">
					<h1 class="main-title mt-5 text-center text-light">
						Register</h1>
					<div class="element-bg w-100 p-5 d-flex justify-content-center mb-5">
						{{ form_start(registrationForm) }}
						{{ form_row(registrationForm.email) }}
						{{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
						{{ form_row(registrationForm.agreeTerms) }}

						<button type="submit" class="btn btn-primary fs-5 text-light">Register</button>
						{{ form_end(registrationForm) }}
					</div>
				</div>
			</div>
		</div>
	</div>
</main>{% endblock %}
